@{
    ViewBag.Title = "Setting";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <h1>Personal Information</h1>
    <form role="form" class="form-horizontal">
        <div class="form-group" data-pg-collapsed>
            <label class="control-label  col-sm-3" for="updateUserId">User ID</label>
            <div class="col-sm-5 col-sm-offset-1">
                <input type="text" class="form-control" id="updateUserId" value="@Model.UserId" disabled="disabled">
            </div>
        </div>
        <div class="form-group" data-pg-collapsed>
            <label class="control-label   col-sm-3" for="updateUserFirstName">First Name</label>
            <div class="col-sm-5 col-sm-offset-1">
                <input type="text" class="form-control" id="updateUserFirstName" placeholder="Enter First Name" value="@Model.FirstName" required>
            </div>
        </div>
        <div class="form-group" data-pg-collapsed>
            <label class="control-label    col-sm-3" for="updateUserLastName">Last Name</label>
            <div class="col-sm-5 col-sm-offset-1">
                <input type="text" class="form-control" id="updateUserLastName" placeholder="Enter Last Name" value="@Model.LastName" required>
            </div>
        </div>
        <div class="form-group" data-pg-collapsed>
            <label class="control-label     col-sm-3" for="updateUserEmail">Email address</label>
            <div class="col-sm-5 col-sm-offset-1">
                <input type="email" class="form-control" id="updateUserEmail" placeholder="Enter email" value="@Model.Email" required>
            </div>
        </div>
        <div class="form-group" data-pg-collapsed>
            <label class="control-label     col-sm-3" for="updateUserPassword">Password</label>
            <div class="col-sm-5 col-sm-offset-1">
                <input type="password" class="form-control" id="updateUserPassword" placeholder="Password" value="@Model.Password" required>
            </div>
        </div>
        <div class="form-group" data-pg-collapsed>
            <label class="control-label col-sm-3" for="updateUserConfirmPassword">Confirm Password</label>
            <div class="col-sm-5 col-sm-offset-1">
                <input type="password" class="form-control" id="updateUserConfirmPassword" placeholder="Confirm Password">
            </div>
        </div>
        <div class="form-group">
            <div class="col-sm-offset-8 col-sm-12">
                <button type="button" class="btn btn-primary" onclick="update();">Update</button>
            </div>
        </div>
    </form>
    <h1>Billing Information</h1>
    <form class="form-horizontal" role="form">
        <fieldset>
            <div class="form-group">
                <label class="col-sm-3 control-label" for="card-holder-name">Name on Card</label>
                <div class="col-sm-5 col-sm-offset-1">
                    <input type="text" class="form-control" name="card-holder-name" id="card-holder-name" placeholder="Card Holder's Name">
                </div>
            </div>
            <div class="form-group">
                <label class="col-sm-3 control-label" for="card-number">Card Number</label>
                <div class="col-sm-5 col-sm-offset-1">
                    <input type="text" class="form-control" name="card-number" id="card-number" placeholder="Debit/Credit Card Number">
                </div>
            </div>
            <div class="form-group">
                <label class="col-sm-3 control-label" for="expiry-month">Expiration Date</label>
                <div class="col-sm-5 col-sm-offset-1">
                    <div class="row">
                        <div class="col-xs-3">
                            <select class="form-control col-sm-2" name="expiry-month" id="expiry-month">
                                <option>Month</option>
                                <option value="01">Jan (01)</option>
                                <option value="02">Feb (02)</option>
                                <option value="03">Mar (03)</option>
                                <option value="04">Apr (04)</option>
                                <option value="05">May (05)</option>
                                <option value="06">June (06)</option>
                                <option value="07">July (07)</option>
                                <option value="08">Aug (08)</option>
                                <option value="09">Sep (09)</option>
                                <option value="10">Oct (10)</option>
                                <option value="11">Nov (11)</option>
                                <option value="12">Dec (12)</option>
                            </select>
                        </div>
                        <div class="col-xs-3">
                            <select class="form-control" name="expiry-year">
                                <option value="13">2013</option>
                                <option value="14">2014</option>
                                <option value="15">2015</option>
                                <option value="16">2016</option>
                                <option value="17">2017</option>
                                <option value="18">2018</option>
                                <option value="19">2019</option>
                                <option value="20">2020</option>
                                <option value="21">2021</option>
                                <option value="22">2022</option>
                                <option value="23">2023</option>
                            </select>
                        </div>
                    </div>
                </div>
            </div>
            <div class="form-group">
                <label class="col-sm-3 control-label" for="cvv">Card CVV</label>
                <div class="col-sm-5 col-sm-offset-1">
                    <input type="text" class="form-control" name="cvv" id="cvv" placeholder="Security Code">
                </div>
            </div>
            <div class="form-group">
                <div class="col-sm-offset-8 col-sm-12">
                    <button type="button" class="btn btn-success">Update</button>
                </div>
            </div>
        </fieldset>
    </form>
</div>