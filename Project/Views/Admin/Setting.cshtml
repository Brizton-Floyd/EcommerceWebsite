@{
    ViewBag.Title = "Setting";
    Layout = "~/Views/Shared/_AdminPanel.cshtml";
}
<div class="container">
    <h1>Personal Information</h1>
    <form role="form" class="form-horizontal">
        <div class="form-group" data-pg-collapsed>
            <label class="control-label  col-sm-3" for="updateUserId">User ID</label>
            <div class="col-sm-5 col-sm-offset-1">
                <input type="text" class="form-control" id="updateUserId" value="@Model.Id" disabled="disabled">
            </div>
        </div>
        <div class="form-group" data-pg-collapsed>
            <label class="control-label   col-sm-3" for="updateUserFirstName">First Name</label>
            <div class="col-sm-5 col-sm-offset-1">
                <input type="text" class="form-control" id="updateUserFirstName" placeholder="Enter First Name" value="@Model.FirstName" required>
            </div>
        </div>
        <div class="form-group" data-pg-collapsed>
            <label class="control-label    col-sm-3" for="updateUserLastName">Last Name</label>
            <div class="col-sm-5 col-sm-offset-1">
                <input type="text" class="form-control" id="updateUserLastName" placeholder="Enter Last Name" value="@Model.LastName" required>
            </div>
        </div>
        <div class="form-group" data-pg-collapsed>
            <label class="control-label     col-sm-3" for="updateUserEmail">Email address</label>
            <div class="col-sm-5 col-sm-offset-1">
                <input type="email" class="form-control" id="updateUserEmail" placeholder="Enter email" value="@Model.Email" required>
            </div>
        </div>
        <div class="form-group" data-pg-collapsed>
            <label class="control-label     col-sm-3" for="updateUserPassword">Password</label>
            <div class="col-sm-5 col-sm-offset-1">
                <input type="password" class="form-control" id="updateUserPassword" placeholder="Password" value="@Model.Password" required>
            </div>
        </div>
        <div class="form-group" data-pg-collapsed>
            <label class="control-label col-sm-3" for="updateUserConfirmPassword">Confirm Password</label>
            <div class="col-sm-5 col-sm-offset-1">
                <input type="password" class="form-control" id="updateUserConfirmPassword" placeholder="Confirm Password">
            </div>
        </div>
        <div class="form-group">
            <div class="col-sm-offset-8 col-sm-12">
                <button type="button" class="btn btn-primary" onclick="updateAdmin();">Update</button>
            </div>
        </div>
    </form>
</div>