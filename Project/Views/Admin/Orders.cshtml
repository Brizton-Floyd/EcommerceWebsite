@{
    ViewBag.Title = "Orders";
    Layout = "~/Views/Shared/_AdminPanel.cshtml";
}

@model IEnumerable<Project.Models.Order>

<div class="container">
    <h1 style="display: block;">Orders</h1>
    <div class="row" style="display: block;">
        <div class="table-responsive" style="display: block;">
            <table class="table table-striped table-hover table-bordered" style="display: table;">
                <thead style="display: table-header-group;">
                    <tr style="display: table-row;">
                        <th class="bg-info">Order No.</th>
                        <th class="bg-info">Customer Id</th>
                        <th class="bg-info">Job Type</th>
                        <th class="bg-info">Media</th>
                        <th style="display: table-cell;" class="bg-info">Catalogue</th>
                        <th class="bg-info" style="display: table-cell;">Content</th>
                        <th style="display: table-cell;" class="bg-info">Status</th>
                    </tr>
                </thead>
                <tbody style="display: table-row-group;">
                    @foreach (var v in Model)
                    {
                        <tr style="display: table-row;">
                            <td>@v.OrderId</td>
                            <td>@v.UserId</td>
                            <td>@v.JobType</td>
                            <td>@v.Media</td>
                            <td>@v.CatalogNumber</td>
                            <td>@v.Content</td>
                            <td>
                                @{
                                    if (v.Status == "DONE")
                                    {
                                        @:<button type="button" class="btn btn-primary" disabled="true"> Complete</button>
                                    }
                                    else
                                    {
                                        @:<button type="button" class="btn btn-primary" onclick="completeOrder(@v.OrderId);"> Not Complete</button>
                                    }
                                }
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>