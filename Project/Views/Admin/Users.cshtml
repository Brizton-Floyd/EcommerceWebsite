@{
    ViewBag.Title = "Users";
    Layout = "~/Views/Shared/_AdminPanel.cshtml";
}

<div class="container">
    <h1 style="display: block;">Users</h1>
    <div class="row" style="display: block;">
        <div class="table-responsive" style="display: block;">
            <table class="table table-striped table-hover table-bordered" style="display: table;">
                <thead style="display: table-header-group;">
                    <tr style="display: table-row;">
                        <th class="bg-info">User ID</th>
                        <th class="bg-info">First Name</th>
                        <th class="bg-info">Last Name</th>
                        <th class="bg-info">Email</th>
                        <th style="display: table-cell;" class="bg-info">Password</th>
                        <th class="bg-info" style="display: table-cell;">Edit</th>
                        <th style="display: table-cell;" class="bg-info">Remove</th>
                    </tr>
                </thead>
                <tbody style="display: table-row-group;">
                    @foreach (var v in Model)
                    {
                        <tr style="display: table-row;">
                            <td>@v.Id</td>
                            <td>@v.FirstName</td>
                            <td>@v.LastName</td>
                            <td>@v.Email</td>
                            <td>@v.Password</td>
                            <td data-pg-collapsed>
                                <button type="button" class="btn btn-primary" onclick="editUser(@v.Id);">
                                    <span class="glyphicon glyphicon-thumbs-up"></span>
                                </button>
                            </td>
                            <td data-pg-collapsed>
                                <button type="button" class="btn btn-danger" onclick="deleteUser(@v.Id);">
                                    <span class="glyphicon glyphicon-remove"></span>
                                </button>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>